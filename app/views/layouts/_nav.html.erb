<nav>
  <ul class="nav navbar-nav navbar-right">
    <% if user_signed_in? %>
      <% if current_user.enabled? %>
        <li>
          <%= link_to(
            'Boards',
            user_boards_path(current_user),
            class: 'navbar-link'
          ) %>
        </li>
        <li>
          <%= link_to(
            'Tasks',
            user_tasks_path(current_user),
            class: 'navbar-link'
          ) %>
        </li>
        <li>
          <%= link_to(
            'Reflections',
            user_daily_notes_path(current_user),
            class: 'navbar-link'
          ) %>
        </li>
      <% end %>
      <% if current_user.admin? %>
        <li>
          <%= link_to "Admin", admin_index_path, class: 'navbar-link' %>
        </li>
      <% end %>
      <li data-toggle="tooltip" data-placement="bottom" title="Account Settings">
        <%= link_to(
          current_user.email,
          edit_user_registration_path,
          class: 'navbar-link'
        ) %>
      </li>
      <li data-toggle="tooltip" data-placement="bottom" title="Logout">
        <%= link_to destroy_user_session_path, method: :delete do %>
          <%= content_tag :span, nil, class: 'glyphicon glyphicon-off' %>
        <% end %>
      </li>
    <% else %>
      <li>
        <%= link_to(
          'Sign up',
          new_user_registration_path,
          class: 'navbar-link'
        ) %>
      </li>
      <li>
        <%= link_to(
          'Login',
          new_user_session_path,
          class: 'navbar-link'
        ) %>
      </li>
    <% end %>
  </ul>
</nav>