<%= form_for(board) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="row">
    <div class="col-md-4">
      <%= f.label :name %><br>
      <%= f.text_field :name, maxlength: 50, class: 'form-control' %>
    </div>

    <div class="col-md-4">
      <%= f.label :jira_url, "Jira URL" %><br>
      <%= f.text_field(:jira_url, class: 'form-control') %>
    </div>

    <div class="col-md-4">
      <%= f.label :standup_url, "Standup URL" %><br>
      <%= f.text_field :standup_url, class: 'form-control'%>
    </div>
  </div>

  <% unless board.new_record? %>
    <div class="row">
      <div class="col-md-12">
        <%= f.label :owner_id %><br>
        <%= f.collection_select(
          :owner_id,
          board.users,
          :id,
          :name_and_email,
          {},
          class: 'form-control'
        ) %>
      </div>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
