<div class="table-responsive">
  <table class="table">
    <thead>
      <th colspan="3">Notes</th>

    </thead>
    <tbody>
    <% task.task_notes.each do |note| %>
      <tr>
        <td><li><%= note.content %></li></td>
        <td><%= local_time(note.created_at) %></td>
        <td>
            <% if policy(task).edit? %>
              <%= button_to(
                task_note_path(note.id),
                method: :delete,
                class: 'unstyled-button',
                data: { confirm: 'Are you sure?' }
              ) do %>
                <span class="glyphicon glyphicon-remove plus-icon"></span>
              <% end %>
            <% end %>
        </td>
      </tr>
    <% end %>
    <% if policy(task).edit? %>
      <tr>
        <td colspan="3">
          <%= render 'shared/task_notes_form', submit_message: "Add Note", task: task %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>