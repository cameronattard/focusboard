<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        View Task
      </div>
      <div class="panel-body">
        <%= render 'form', header_text: 'View Task', task: @task, board: @board, users: @users, readonly: true %>
        <%= render 'task_notes', task: @task %>
      </div>
      <div class="panel-footer">
        <%= link_to 'Back', @task.board, class: "btn btn-default" %>
        <% if current_user.enabled? && policy(@task).edit? %>
          <%= link_to(
            'Edit Task',
            edit_task_path(@task),
            class: "btn btn-default"
          ) %>
          <%= link_to(
            'Delete Task',
            @task,
            method: :delete,
            class: "btn btn-default",
            data: { confirm: 'Are you sure you want to delete this task?' }
          ) %>
          <%= link_to(
            'New Task',
            new_board_task_path(@task.board.id),
            class: "btn btn-default"
          ) %>
        <% end %>
      </div>
    </div>
  </div>
</div>