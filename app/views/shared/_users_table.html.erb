<div class="table-responsive">
  <table class="table table-inverse table-condensed table-hover">
    <thead>
      <tr>
        <th>Email</th>
        <th>Name</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td>
            <div class="btn-group btn-group-xs">
              <% if user.enabled? %>
                <%= link_to(
                  'Disable',
                  user,
                  class: 'btn btn-default',
                  method: :patch
                ) %>
              <% else %>
                <%= link_to(
                  'Enable',
                  user,
                  class: 'btn btn-default',
                  method: :patch
                ) %>
              <% end %>
              <%= link_to(
                'Delete',
                user,
                method: :delete,
                class: 'btn btn-danger',
                data: { confirm: 'Are you sure?' }
              ) %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>